VERSION=$(shell dpkg-parsechangelog  | sed -n '/^Version:/ {s/^.*: //; p}')

%:
	dh "$@"

override_dh_auto_install:
	dh_auto_install

	# put our package version into the code for logging
	sed -i 's/@version@/$(VERSION)/' debian/autopkgtest/usr/share/autopkgtest/lib/adt_testbed.py

override_dh_auto_test:
ifeq (, $(findstring nocheck, $(DEB_BUILD_OPTIONS)))
	if type pyflakes3 >/dev/null 2>&1; then tests/pyflakes; else echo "pyflakes3 not available, skipping"; fi
	tests/pycodestyle || true
	tests/testdesc
	tests/autopkgtest_args
	tests/run_args
	env NO_PKG_MANGLE=1 tests/autopkgtest NullRunner
	env NO_PKG_MANGLE=1 tests/adt-run NullRunner
endif

# necessary until we move to compat level 9
override_dh_pysupport:
	true
